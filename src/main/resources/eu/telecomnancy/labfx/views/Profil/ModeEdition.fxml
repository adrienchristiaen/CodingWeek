<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.telecomnancy.labfx.Profil.ModeEditionController">
   <!-- Contenu pour ModeEdition -->
   <Label text="Nouveau Mot de Passe:" />
   <PasswordField fx:id="nouveauMotDePasseField" />
   <Label text="Confirmer Mot de Passe:" />
   <PasswordField fx:id="confirmerMotDePasseField" />
   <Button text="Changer Mot de Passe" onAction="#changerMotDePasse" />
   <Label text="Nouvelle Photo de Profil:" />
   <ImageView fx:id="nouvellePhotoProfil" fitHeight="100" fitWidth="100">
      <image>
         <Image url="@../images/DavidBeckam.png" />
      </image>
   </ImageView>
   <Button text="Charger Nouvelle Photo" onAction="#chargerNouvellePhoto" />
</VBox>
